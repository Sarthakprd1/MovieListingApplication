            <div class="form-group">
                <label asp-for="MoviePhoto" class="control-label">Insert Movie Image</label>
                <input type="file" asp-for="MoviePhoto" class="form-control" />
                <span asp-validation-for="MoviePhoto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="YearId" class="control-label">Year</label>
                <select asp-for="YearId" class="form-control" asp-items="ViewBag.YearId"></select>
                <span asp-validation-for="YearId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GenreRefId" class="control-label">Genre</label>
                <select asp-for="GenreRefId" class="form-control" asp-items="ViewBag.GenreId"></select>
                <span asp-validation-for="GenreRefId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CountryRefId" class="control-label">Country</label>
                <select asp-for="CountryRefId" class="form-control" asp-items="ViewBag.CountryId"></select>
                <span asp-validation-for="CountryRefId" class="text-danger"></span>
            </div>

